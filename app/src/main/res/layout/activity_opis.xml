<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbarStyle="insideInset">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/logoEmpty"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="10dip"
        android:scaleType="centerInside"
        android:src="@drawable/food"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/logoEmpty"
        android:text="Frytki"
        android:textSize="30sp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/czasGotowania"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/logoEmpty"
        android:layout_below="@id/name"
        android:text="Czas gotowania 2h"
        android:textSize="16sp"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:id="@+id/servs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/name"
        android:text="Danie dla 2 osob"
        android:textSize="16sp"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@id/logoEmpty"
        />
    <ImageView
        android:id="@+id/people"
        android:layout_width="16sp"
        android:layout_height="20sp"
        android:src="@drawable/person"
        android:scaleType="centerInside"
        android:layout_toRightOf="@id/logoEmpty"
        android:layout_below="@id/name"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/czasPre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/logoEmpty"
        android:text="Czas przygotowania 2h"
        android:textSize="16sp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/sklatxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/czasPre"
        android:text="Składniki:"
        android:textSize="25sp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/skladniki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/sklatxt"
        android:text="1 x marchewka"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/opistxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/skladniki"
        android:text="Opis:"
        android:textSize="25sp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/opis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/opistxt"
        android:text="blblbsfbldfs bsbd"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/howTotxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/opis"
        android:text="Sposób przygotowania"
        android:textSize="25sp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/howTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/howTotxt"
        android:text="1x fjbfjb"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/who"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/howTo"
        android:text="Dodał: Fernando Pereo"
        android:textSize="20sp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/coment"
        android:layout_below="@+id/who"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dodaj komentarz"
        android:inputType="textMultiLine"
        android:layout_marginTop="15dp"/>
    <Button
        android:id="@+id/btnComment"
        android:layout_below="@+id/coment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dodaj"
        android:background="#009999"
        android:layout_marginTop="15dp"/>
</RelativeLayout>
</ScrollView>